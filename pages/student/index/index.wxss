/**index.wxss**/

.main-box {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: white;
  position: absolute;
  overflow: hidden;
}

.index-scroll {
  height: 90%;
  background: #f4f5f6;

  display: flex;
}

.nav-tabs {
  display: flex;
  flex-direction: row;
  position: fixed;
  height: 120rpx;
  width: 100%;
  bottom: 0px;
}

.tab-list {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  background: #fcfcfc;
  height: 120rpx;
  width: 25%;
}

.tab-text {
  font-size: 24rpx;
  line-height: 35rpx;
  color: #5f5f5f;
}

.iconPath {
  width: 50rpx;
  height: 50rpx;
}

.tab-content {
  flex: 1;
}

.default {
  line-height: 75rpx;
  text-align: center;
  flex: 1;
  color: #eee;
  font-weight: bold;
  font-size: 28rpx;
}

.active {
  line-height: 75rpx;
  text-align: center;
  color: black;
  font-weight: bold;
  font-size: 28rpx;
}

.show {
  display: block;
  flex: 1;
}

.hidden {
  display: none;
  flex: 1;
}
