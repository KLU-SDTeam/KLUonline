.main-box{
  height: 100%;
  display: flex;
  flex: 1;
  flex-direction: column; 
}
.title{
  margin-top: 13rpx;
  padding: 2rpx;
  display: block;
  width: 100%;
  text-align: center;
  color: #e81123;
  font-family: 'KaiTi';
  font-size: 35rpx;
}
.time{
  font-size: 28rpx;
  font-family: 'KaiTi';
  text-align: right;
  padding-right: 30rpx;
  color: #ccc;
}
.img{
    background-color: #efefef;
    overflow: hidden;
    width:80%;
    height:400rpx;
    margin: auto;
    margin-top: 10rpx;
