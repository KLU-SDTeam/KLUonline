/**index.wxss**/

.main-box {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: white;
  position: absolute;
  overflow: hidden;
}

.header {
  background-color: #32cd32;
  display: flex;
  flex-direction: row;
  position: relative;
  /* 这里需要调整图片大小，这个抬头header的尺寸太高了 */
  height: 280rpx;
  width: 100%;
}

.logo {
  margin-top: 60rpx;
  margin-left: 20rpx;
  height: 90rpx;
  width: 90rpx;
  border-radius: 60%;
}

.userinfo {
  margin-left: 20rpx;
  margin-top: 60rpx;
  flex-direction: column;
}

.userinfo-nickname {
  font-family: "微软雅黑";
  color: white;
  font-size: 30rpx;
}

.settings {
  height: 60rpx;
  width: 60rpx;
  margin-left: 360rpx;
  margin-top: 90rpx;
  border-radius: 60%;
}

.index-scroll {
  height: 75%;
  background: #f4f5f6;
  position: relative;
  left: 0;
  top: 0;
  z-index: 99;
  white-space: nowrap;
  display: flex;
}

.nav-tabs {
  display: flex;
  flex-direction: row;
  position: relative;
  height: 120rpx;
  width: 100%;
}

.tab-list {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  background: #fcfcfc;
  height: 120rpx;
  width: 25%;
}

.tab-text {
  font-size: 24rpx;
  line-height: 35rpx;
  color: #5f5f5f;
}

.iconPath {
  width: 50rpx;
  height: 50rpx;
}

.tab-content {
  flex: 1;
}

.default {
  line-height: 75rpx;
  text-align: center;
  flex: 1;
  color: #eee;
  font-weight: bold;
  font-size: 28rpx;
}

.active {
  line-height: 75rpx;
  text-align: center;
  color: black;
  font-weight: bold;
  font-size: 28rpx;
}

.show {
  display: block;
  flex: 1;
}

.hidden {
  display: none;
  flex: 1;
} 
