/* components/information/information.wxss */

.main-box{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  position: absolute;
  overflow: hidden;

}
.menubar{
  position: relative;
    height: 80rpx;
    background: #f4f5f6;
    left:0;
    top:0;
    z-index: 99;
    white-space: nowrap;
    display: flex;
}

.menu{
    width:1070rpx;
    height: 80rpx;
    line-height: 80rpx;
    background: #f4f5f6;
}
.menu text{
    display: inline-block;
    width:200rpx;
    font-size: 30rpx;
    height: 100%;
    text-align: center;
}
.page_list {
  height: 100%;
  display: flex;
  flex: 1;
  flex-direction: column;
  position: relative;
  overflow: hidden;
  bottom: 120rpx;
}


/*瀑布流列表 开始*/
.item {
  position: relative;
  display: flex;
  flex-direction: column;
  padding: 10rpx 10rpx;
  border-bottom: 1rpx solid #eee;
  cursor: pointer;
  background:#fbf9fe;
 top:100rpx;
}

.news-item {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 1px;
  padding-top: 1px;
  padding-right: 1px;
  padding-bottom: 1px;
  margin-left: 1px;
  margin-right: 1px;
  margin-top: 1px;
  border: 2px solid #f0f0f0;
  box-shadow: 5px 5px 5px #e0e0e0;
  border-radius: 10px;
  background:#fff;
  overflow: hidden;
}

.title {
  margin-top: 13rpx;
  padding: 2rpx;
  display: block;
  width: 100%;
  text-align: center;
  color: #e81123;
  font-family: 'KaiTi';
  font-size: 35rpx;
}

.time {
  font-size: 28rpx;
  font-family: 'KaiTi';
  text-align: right;
  padding-right: 30rpx;
  color: #ccc;

}

.desc {
  font-size: 30rpx;
  font-family: 'KaiTi';
  color: #34495e;
  padding: 10rpx;
}
/*瀑布流列表 结束*/